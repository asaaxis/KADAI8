<p id="notice"><%= notice %></p>

<h1>ユーザー・一覧</h1>

<table>
  <head>
    <tr>
      <th>名前</th>
      <th>画像</th>
      <th colspan="3"></th>
    </tr>
  </head>

  <body>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= image_tag user.image.url if user.image.present? %></td>
        <td><%= link_to '詳細', user %></td>
        <% if user.id == current_user.id %>
          <td><%= link_to '編集', edit_user_path(user) %></td>
          <td><%= link_to '削除', user, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </body>
</table>

<br>

