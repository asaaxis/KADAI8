<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <head>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </head>

  <body>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= image_tag user.image.url if user.image.present? %></td>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: '本当に削除する?' } %></td>
      </tr>
    <% end %>
  </body>
</table>

<br>

