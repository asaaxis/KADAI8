<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <head>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </head>

  <body>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= image_tag picture.image.url if picture.image.present? %></td>
        <td><%= picture.content %></td>
        <td><%= picture.user.name %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </body>
</table>

<br>

