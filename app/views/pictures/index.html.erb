<p id="notice"><%= notice %></p>

<h1>投稿・一覧</h1>

<table>
  <head>
    <tr>
      <th>画像</th>
      <th>コメント</th>
      <th>名前</th>
      <th colspan="3"></th>
    </tr>
  </head>

  <body>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= image_tag picture.image.url if picture.image.present? %></td>
        <td><%= picture.content %></td>
        <td><%= picture.user.name %></td>
        <td><%= link_to '詳細', picture %></td>
        <% if picture.user_id == current_user.id %>
          <td><%= link_to '編集', edit_picture_path(picture) %></td>
          <td><%= link_to '削除', picture, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </body>
</table>

<br>

<%= link_to '新規投稿', new_picture_path %>
